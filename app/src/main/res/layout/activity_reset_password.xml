<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainPage.ResetPassword">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_back"
        android:text="Reset Password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="32sp"
        android:textColor="#313131"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/subText"
        android:text="Reset code was sent to your email. Please enter the code and create new password"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="#313131"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetCode"
        android:text="Reset code"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="24sp"
        android:textColor="#313131"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetCodeEdit"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter your code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPass"
        android:text="New password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="24sp"
        android:textColor="#313131"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPasswordEdit"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter your new password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordText"
        android:text="Confirm password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="24sp"
        android:textColor="#313131"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPass"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirm yout password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/login2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_primaru"/>


</LinearLayout>