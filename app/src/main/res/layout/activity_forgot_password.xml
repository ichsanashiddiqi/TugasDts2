<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainPage.ForgotPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_back"
        android:text="Forgot password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="32sp"
        android:textColor="#313131"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subText"
        android:text="Please enter your email below to receive your password reset intstructions"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="#313131"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UsernameText"
        android:text="Enter email"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="24sp"
        android:textColor="#313131"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="blabla@gmail.com"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="SEND REQUEST"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_primaru"
        android:onClick="sentCode"/>

</LinearLayout>